<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_subject">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_sub_name"
            android:gravity="center"
            android:textSize="25dp"
            android:text="과목추가"/>
        <LinearLayout
            android:layout_below="@+id/add_sub_name"
            android:id="@+id/answpcnrk1"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과목"/>
            <EditText
                android:id="@+id/subjectBookName"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content">

            </EditText>
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:text="중복체크"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/answpcnrk2"
            android:paddingHorizontal="20dp"
            android:layout_below="@+id/answpcnrk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교재이미지"/>

            <Button
                android:id="@+id/subjectImage"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="교재 이미지 추가"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/addbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/answpcnrk2"
            android:layout_width="match_parent"
            android:foregroundGravity="right"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/subjectPush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제출" />
        </LinearLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>